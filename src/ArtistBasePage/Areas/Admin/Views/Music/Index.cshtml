@{
    ViewBag.Title = "Index";
}


<div class="span20 module">
    <h3>Your songs</h3>
    <section class="content">
        <button class="btn-primary" data-dialog="new-event" id="dialog">Add a new event</button><br />

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Album</th>
                    <th></th>
                    <th></th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: songs">
                <tr>
                    <td><span data-bind="text: title"></span></td>
                    <td><span data-bind="text: album"></span></td>
                    <td><span></span></td>
                    <td></td>
                    <td><a href="#" data-bind="click: remove">Delete</a></td>
                </tr>
            </tbody>

        </table>
        <footer>
            <label for="upload">Upload your music:</label>
            <input type="file" multiple="true" name="upload" value="Click here to upload some files" />

        </footer>
    </section>
</div>
<div class="span20 module ">
    <h3>Your playlists</h3>
    <section class="content clearfix">

        <ul class="horizontal">
            <li><span class="playlist"><span><em>Main</em><br />
                5 songs</span></span></li>
            <li><span class="new-playlist">+</span></li>
        </ul>

    </section>
</div>

@section scripts
{
    <script src="~/Areas/Admin/Scripts/ko.vm.music.js"></script>
}
