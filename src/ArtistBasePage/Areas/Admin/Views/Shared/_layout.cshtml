        $.connection.adminHub.notify = function(message) {
            var notificationBox = $(".notification");
            notificationBox.find("h3").text(message.Title);
            notificationBox.find("section").text(message.Content);
            notificationBox.fadeIn(100, function() {
                setTimeout(function() {
                    notificationBox.fadeOut(300);
